{
  "name": "svelte-tailwind",
  "version": "1.1.0",
  "scripts": {
    "start": "sirv public",
    "autobuild": "rollup -c -w",
    "dev": "run-p watch:tailwind autobuild",
    "build": "npm run build:tailwind && rollup -c",
    "format": "prettier --write \"{,!(public)/**/}*.{js,svelte}\"",
    "watch:tailwind": "postcss src/tailwind.css -o public/global.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss src/tailwind.css -o public/global.css",
    "setup:ts": "node scripts/setupTypeScript"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.2.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.1",
    "rollup": "^2.33.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.29.7",
    "svelte-preprocess": "^4.5.2",
    "tailwindcss": "^1.9.6"
  },
  "dependencies": {
    "sirv-cli": "^1.0.8"
  }
}
