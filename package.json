{
  "name": "svelte-tailwind",
  "version": "1.1.0",
  "scripts": {
    "start": "sirv public",
    "dev": "run-p css:watch svelte:dev",
    "build": "run-s css:build svelte:build",
    "format": "prettier --write src/**/*.{js,json,svelte}",
    "svelte:dev": "rollup -c -w",
    "svelte:build": "rollup -c",
    "css:watch": "postcss src/tailwind.css -o public/global.css -w",
    "css:build": "cross-env NODE_ENV=production postcss src/tailwind.css -o public/global.css",
    "setup:ts": "node scripts/setupTypeScript"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.1",
    "svelte-preprocess": "^4.6.1",
    "tailwindcss": "^2.0.2"
  },
  "dependencies": {
    "sirv-cli": "^1.0.10"
  }
}
